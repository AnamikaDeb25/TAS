<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record audio"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:padding="10dp"
        android:fontFamily="@font/gilroyfont"
        android:textColor="@color/black"
        android:id="@+id/status"
        />
<TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btnbg"
    android:text="Start Recording"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:drawableLeft="@drawable/ic_baseline_record_voice_over_24"
    android:drawableTint="@color/black"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:id="@+id/btn_start_rec"
    />
<TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btnbg"
    android:text="Stop Recording"
    android:drawableLeft="@drawable/ic_baseline_voice_over_off_24"
    android:drawableTint="#F4329D"
    android:textColor="#F4329D"
    android:textSize="20sp"
    android:layout_marginTop="10dp"
    android:visibility="gone"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:id="@+id/btn_stop_rec"
    />
<TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btnbg"
    android:text="Send Recording"
    android:textColor="#86F3A2"
    android:textSize="20sp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:visibility="gone"
    android:drawableRight="@drawable/send"
    android:drawableTint="#86F3A2"
    android:id="@+id/btn_send_rec"
    />

</LinearLayout>