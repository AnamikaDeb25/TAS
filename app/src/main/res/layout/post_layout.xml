<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="3dp">


            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:cardPreventCornerOverlap="false"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ivprofile_item"
                    android:background="@drawable/pict"
                    android:clickable="true"
                    android:scaleType="centerCrop"/>



            </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="17sp"
                    android:id="@+id/tv_name_post"
                    android:paddingStart="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#353232"
                    android:text=""
                    android:textSize="13sp"
                    android:id="@+id/tv_time_post"
                    android:paddingStart="5dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_moreoptions"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/morebutton_posts"
                android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>



        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:fontFamily="@font/gilroyfont"
            android:text="details"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:trimMode="trimModeLine"
            app:trimLines="8"
            app:colorClickableText="@color/blue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_desc_post"
            android:paddingStart="5dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="17dp"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/iv_post_item"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_image_24"
                android:visibility="visible"
                tools:ignore="MissingConstraints" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                >
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_dislike"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/likebutton_posts"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/gilroyfont"
                    android:layout_gravity="center"
                    android:text="0 Likes"
                    android:id="@+id/tv_likes_post"
                    android:paddingStart="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cmnt"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/commentbutton_posts"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_comment_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Comments"
                    android:fontFamily="@font/gilroyfont"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_share_24"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/sharetbutton_posts"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tv_share_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:text="Share"
                    android:fontFamily="@font/gilroyfont"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E8E4E4"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>